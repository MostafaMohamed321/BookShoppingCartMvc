@model IEnumerable<StockDisplayModel>
@{
    Layout = "_AdminLayout";

}

<h1>Stocks</h1>
<form asp-action="Index" method="get" class="my-2 d-flex gap-2">
    <input type="text" name="sTerm" class="form form-control w-25" placeholder="Search by book"/>
    <button type="submit" class="btn btn-primary">Find</button>
    <a asp-action="Index" asp-controller="Stock">Clear</a>
</form>
<table class="table table-bordered">
    <tr>
        <th>Book</th>
        <th>Stock</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.BookName</td>
            <td>@item.Quantity</td>
            <td><a asp-action="ManageStock" asp-controller="Stock" asp-route-bookId="@item.BookId" class="btn btn-info">Update Stock</a></td>
        </tr>
        
    }

</table>
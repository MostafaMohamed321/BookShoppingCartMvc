@model CheckoutModel
@{
    ViewData["Title"] = "CheckOut";
}

<h2>CheckOut</h2>

<form asp-action="CheckOut">
    <div class="py-2">
        <label asp-for="Name">Name*</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-bg-danger"></span>
    </div>
    <div class="py-2">
        <label asp-for="Email">Email*</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-bg-danger"></span>
    </div>
    <div class="py-2">
        <label asp-for="MobileNumber">MobileNumber*</label>
        <input type="text" class="form-control" asp-for="MobileNumber" />
        <span asp-validation-for="MobileNumber" class="text-bg-danger"></span>
    </div>
    <div class="py-2">
        <label asp-for="Address">Address*</label>
        <input type="text" class="form-control" asp-for="Address" />
        <span asp-validation-for="Address" class="text-bg-danger"></span>
    </div>
    <div class="py-2">
        <span>COD</span>
        <select asp-for="PaymentMethod" class="form-control">
            @foreach(var method in Enum.GetValues(typeof(BookShoppingCartMvcUI.Constants.PaymentMethods)))
            {
                <option value="@method.ToString()">@method.ToString()</option>
            }
  
        </select>
        <span asp-validation-for="PaymentMethod" class="text-bg-danger"></span>

    </div>
    <dv class="py-2">
        <button type="submit" class="btn border-info">Next</button>
    </dv>


</form>